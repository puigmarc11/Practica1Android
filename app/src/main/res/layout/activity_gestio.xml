<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context=".ActivityGestio">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lsvGestioFiltre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="1dp">

                <EditText
                    android:id="@+id/edtNomProfessioGestio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/fons2"
                    android:hint="Name"
                    android:paddingLeft="5dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/imvBackGestio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/rodona2"
                        android:src="@android:drawable/ic_menu_revert" />

                    <ImageView
                        android:id="@+id/imvNewGestio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rodona2"
                        android:src="@android:drawable/ic_input_add" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imvGestioFiltre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rodona2"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfilter" />

                <ImageView
                    android:id="@+id/imvGestioNoFiltre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rodona2"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconcancelfilter" />

                <ImageView
                    android:id="@+id/imvGestioEliminar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rodona2"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_delete" />

                <ImageView
                    android:id="@+id/imvGestioEdicio"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rodona2"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lsvGestioPersonatges"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
