<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/fonsgestiofila"
    android:orientation="horizontal"
    android:padding="9dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imvImatgeGestioFila"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/orcm3" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<LinearLayout-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp">-->

            <TextView
                android:id="@+id/txvNomGestioFila"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/fons2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="KYRA"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->

            <!--<ImageView-->
            <!--android:layout_gravity="right"-->
            <!--android:src="@drawable/zzz2"-->
            <!--android:id="@+id/imvAlignmentGestioFila"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="fitCenter" />-->

            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/txvOficiGestioFila"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Cleric (LV1)"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <include
                    layout="@layout/visualitzar_habilitats2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="4" />

                <ImageView
                    android:id="@+id/imvSexeGestioFila"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/female" />

                <ImageView
                    android:id="@+id/imvRasaGestioFila"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
        android:layout_gravity="top|right"
        android:src="@drawable/zzz2"
        android:id="@+id/imvAlignmentGestioFila"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter" />

    </FrameLayout>
</LinearLayout>


